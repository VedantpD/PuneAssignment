
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Border color, adjust as needed -->
            <corners android:radius="0dp" /> <!-- Adjust the radius for curved corners -->
        </shape>
    </item>

    <!-- Inner background to create padding for the search icon and text -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Inner background color, adjust as needed -->
        </shape>
    </item>
</layer-list>
