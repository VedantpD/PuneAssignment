<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the card (light grey) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Light Grey Color -->
            <corners android:radius="16dp" /> <!-- Adjust the radius for curved edges -->
        </shape>
    </item>

    <!-- Shadow at the bottom (black) -->
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#0D000000" /> <!-- Black Shadow Color -->
            <corners android:radius="16dp" /> <!-- Adjust the radius for curved edges -->
        </shape>
    </item>

    <!-- CardView content -->
    <item android:left="1dp" android:right="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Light Grey Color -->
            <corners android:radius="16dp" /> <!-- Adjust the radius for curved edges -->
        </shape>
    </item>
</layer-list>
